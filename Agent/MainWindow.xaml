<Window x:Class="Agent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wake my PC Lighthouse" Height="306" Width="525" Icon="/Agent;component/ico.ico" ResizeMode="CanMinimize" VisualTextRenderingMode="ClearType">
    <Window.Resources>

    </Window.Resources>
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Grid VerticalAlignment="Stretch">
            <Path Fill="BlueViolet" Data="M0,0 L0,10 L1,9 L2,10 L2,0 z" Stretch="Fill" Width="100" />
            <Image Source="ico64.png" VerticalAlignment="Top" Stretch="None" Margin="0,12,0,0" />
        </Grid>

        <Grid Margin="12" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel x:Name="DebugPanel" Orientation="Vertical" Grid.Row="1">
                <Button Click="StartButton_Click" Margin="0,4" Height="30" IsEnabled="{Binding IsServerRunning, Converter={StaticResource BoolInverterConverter}}">Start</Button>
                <Button Click="StopButton_Click" Margin="0,4" Height="30" IsEnabled="{Binding IsServerRunning}">Stop</Button>
                <TextBlock Text="Dude, I'm in alpha stage, don't too harsh with me ! Oh and I only work on WAN so far, so your computer and phone needs to be on the same network. You can give feedback about me at www.ree7.fr" TextWrapping="Wrap" Foreground="#FFA39B9B" />
            </StackPanel>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="Access password"/>
                    <TextBox x:Name="tbPassword" Text="{Binding Password, Mode=TwoWay}"/>

                    <TextBlock Text="Port"/>
                    <TextBox x:Name="tbPort" Text="{Binding Port, Mode=TwoWay}"/>

                    <CheckBox x:Name="cbAutoStart" IsChecked="{Binding Autostart, Mode=TwoWay}" Margin="0,8">
                        <TextBlock Text="Autostart server on launch (will start minimized)"/>
                    </CheckBox>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
