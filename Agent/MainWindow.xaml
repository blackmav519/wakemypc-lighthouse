<Window x:Class="Agent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wake my PC" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel x:Name="DebugPanel" Orientation="Vertical" Grid.Row="0">
            <Button Click="StartButton_Click">Start</Button>
            <Button Click="StopButton_Click">Stop</Button>
        </StackPanel>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel>
                <TextBlock Text="Access password"/>
                <TextBox x:Name="tbPassword" Text="{Binding Password, Mode=TwoWay}"/>
                
                <TextBlock Text="Port"/>
                <TextBox x:Name="tbPort" Text="{Binding Port, Mode=TwoWay}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
